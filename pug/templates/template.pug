block config
    include ../config/config.pug

doctype html
html(lang="es")
    head
        block head
            include ../blocks/head.pug
    body
        header.cabecera
            .cabecera__contenedor
               block cabecera
                include ../blocks/cabecera.pug
        .banner
            block banner
                include ../blocks/banner.pug
        .contenedor
            if main 
                main.main
                    block main
            else
                main.main--full
                    block main
            if aside
                aside.aside
                    block aside
                        include ../blocks/siguenos.pug
        footer.footer
            block footer
                include ../blocks/footer.pug